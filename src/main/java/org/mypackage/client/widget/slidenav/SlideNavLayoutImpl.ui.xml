<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.gwt2.example.base.client.widget">

    <ui:with field='resource' type='org.mypackage.client.widget.slidenav.resource.SlideNavResource' />

    <g:HTMLPanel width="100%" height="100%">


            <nav ui:field="navMenu" class="{resource.css.pushMenu} {resource.css.pushmenuLeft}">
                <h3 ui:field="menuTitle" />
                <!--<a href="#">Layer 1</a>-->
                <!--<a href="#">Layer 2</a>-->
                <!--<a href="#">Layer 3</a>-->
                <!--<a href="#">Layer 4</a>-->
                <!--<a href="#">Layer 5</a>-->
                <g:SimplePanel ui:field="navContent"/>
            </nav>

            <section class="{resource.css.buttonSet}" >
                <g:Button ui:field="navButton" />
                <g:SimplePanel ui:field="button"/>
            </section>


            <section class="{resource.css.content}" style= "height:100%; width:100%; ">
               <g:ResizeLayoutPanel ui:field="content" height="100%" width="100%"/>
            </section>


     </g:HTMLPanel>

</ui:UiBinder>